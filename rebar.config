
{port_sources, ["c_src/*.cpp"]}.
{port_envs, [
  %%{"CC","g++"},
  %%${"CXX","g++"}
   {"CXXFLAGS", "$CXXFLAGS  -Ideps/bullet/src"}
   %%{"LDFLAGS", "-L/usr/local/lib -lBulletDynamics -lBulletCollision -lLinearMath"}
]}.


{pre_hooks, [
  {compile, "echo Fetching Bullet to `pwd`"},
  {compile, "git checkout https://github.com/bulletphysics/bullet3.git"},
  {compile, "./priv/compile_bullet.sh"}
]}.

